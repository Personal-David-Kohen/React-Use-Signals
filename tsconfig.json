{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "ES2015",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}
